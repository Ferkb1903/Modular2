# Macro simple para verificar configuración de malla
/tracking/verbose 0
/run/verbose 1

# Multithreading
/run/numberOfThreads 1

# Inicializar
/run/initialize

# Configurar fuente
/source/switch Flexi
/run/geometryModified

# Crear malla de prueba
/score/create/boxMesh testMesh
/score/mesh/boxSize 9.0 9.0 0.0125 cm
/score/mesh/nBin 360 360 1
/score/mesh/translate/xyz 0. 0. 0. cm
/score/quantity/energyDeposit eDep
/score/close

# Listar configuración
/score/list

# Ejecutar pocos eventos
/run/beamOn 10

# Exportar datos de prueba
# ORIGINAL: /score/dumpQuantityToFile testMesh eDep test_output.out
# ==> CONVERTIDO A ROOT OUTPUT:
/score/dumpQuantityToFile testMesh eDep test_output.root
